<div class="page-header">
  <%= link_to employees_path, class: 'btn btn-default' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Back
  <% end %>
  <%= link_to edit_employee_path(@employee), class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-pencil"></span>
      Edit
  <% end %>
  <h1>Show employee</h1>
</div>

<dl class="dl-horizontal">
  <dt>First name:</dt>
  <dd><%= @employee.first_name %></dd>

  <dt>Last name:</dt>
  <dd><%= @employee.last_name %></dd>

  <dt>Email:</dt>
  <dd><%= @employee.email %></dd>

  <dt>Employee number:</dt>
  <dd><%= @employee.employee_number %></dd>

  <dt>Hire date:</dt>
  <dd><%= @employee.hire_date.strftime('%m/%d/%Y') %></dd>

  <dt>Removal date:</dt>
  <% if @employee.removal_date == nil %>
      <dd>N/A</dd>
  <% else %>
      <dd><%= @employee.removal_date.strftime('%m/%d/%Y') %></dd>
  <% end %>

</dl>
