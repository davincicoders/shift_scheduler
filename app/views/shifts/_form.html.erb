<%= form_for(@shift, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @shift.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@shift.errors.count, "error") %> prohibited this shift from being saved:</h4>

      <ul>
      <% @shift.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :shift_description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :shift_description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_time, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :start_time, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_time, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :end_time, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :schedule_id, 'Assigned to', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:schedule_id, Schedule.all, :id, :employee_name) %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
