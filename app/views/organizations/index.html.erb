<%= render 'organizations/helper_box' %>



<div>
  <div class="page-header">
    <%= link_to new_organization_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Organization
    <% end %>
    <h1>Listing Organizations</h1>
  </div>

  <div class="table-responsive">
    <table id="organization_table" class="table table-striped table-bordered table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <%= content_tag_for(:tr, @organizations) do |organization| %>
        <td><%= organization.name %></td>
        <td><%= link_to 'Join', join_organization_path(organization) %></td>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
