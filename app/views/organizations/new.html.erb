<div class="page-header">
  <h1>New Organization</h1>
</div>

<%= form_for(@organization, html: {class: "form-horizontal", role: "form"}) do |f| %>
    <% if @organization.errors.any? %>
        <div class="alert alert-danger alert-dismissable" role="alert">
          <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4><%= pluralize(@organization.errors.count, "error") %> prohibited this employee from being saved:</h4>

          <ul>
            <% @organization.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, 'Name', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :address, 'Address', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :city, 'City', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :city, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :state, 'State', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :state, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :zip_code, 'Zip Code', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :zip_code, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :phone_number, 'Phone Number', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :phone_number, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, 'Email', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, 'Password', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :password, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, 'Password Confirmation', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :password_confirmation, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Signup", class: "btn btn-primary" %>
      </div>
    </div>
<% end %>
